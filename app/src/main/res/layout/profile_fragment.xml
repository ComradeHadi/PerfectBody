<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.ProfileFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/myProfile"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-20dp"
        android:layout_marginTop="10dp"
        android:textColor="#253977"
        android:textStyle="bold"
        android:textSize="40sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/myGender"
        android:id="@+id/textView4"
        android:layout_marginTop="175dp"
        android:textSize="30sp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/myHeight"
        android:id="@+id/textView6"
        android:textSize="30sp"
        android:layout_below="@+id/dateText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/HeightText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/myWeight"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/dateText"
        android:layout_marginRight="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/birthDateText"
        android:id="@+id/textView10"
        android:textSize="30sp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />


    <com.example.m.niceproject.RadioButtonWithTableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignTop="@+id/textView4"
        android:id="@+id/radioButton"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp">

        <TableRow android:gravity="center_horizontal"
            android:id="@+id/GenderChoose">

            <RadioButton
                android:id="@+id/maleButton"
                android:text="@string/myMale"
                android:checked="false" />

            <RadioButton
                android:id="@+id/femaleButton"
                android:text="@string/myFemale"
                android:checked="false"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp" />

        </TableRow>


    </com.example.m.niceproject.RadioButtonWithTableLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:text=""
        android:id="@+id/HeightText"
        android:layout_above="@+id/textView7"
        android:labelFor="@+id/HeightText"
        android:layout_alignStart="@+id/dateText"
        android:layout_marginRight="0dp"
        android:layout_alignEnd="@+id/dateText"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:text=""
        android:id="@+id/WeightText"
        android:layout_alignBottom="@+id/textView7"
        android:labelFor="@+id/WeightText"
        android:layout_alignStart="@+id/dateText"
        android:layout_alignEnd="@+id/textView26"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        />



    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dateText"
        android:inputType="date"
        android:layout_toStartOf="@+id/textView25"
        android:layout_marginRight="-30dp"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CM"
        android:id="@+id/textView25"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/HeightText"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="KG"
        android:id="@+id/textView26"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView25"
        android:layout_marginLeft="-65dp"
        android:layout_marginBottom="5dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView1"
        android:src="@drawable/profile"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>